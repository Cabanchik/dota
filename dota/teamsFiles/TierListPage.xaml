<Page x:Class="dota.TierListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:dota"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TierListPage"
      x:Name="pag">
   
    <ScrollViewer>
        
        <Grid x:Name="gridd">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel x:Name="titleStack" Grid.Row="0" Grid.Column="0" Orientation="Horizontal" ></StackPanel>
            <StackPanel x:Name="dpcStack" Grid.Row="0" Grid.Column="1" Orientation="Vertical" ></StackPanel>
            <StackPanel Grid.Column="0" Orientation="Vertical" Grid.Row="1" x:Name="stack"></StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="1" x:Name="pointsStack"></StackPanel>
            
        </Grid>
    </ScrollViewer>
</Page>
